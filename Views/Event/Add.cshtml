
@model EventShow.Models.Eventinfo



@{
    Layout = "_Layout";
    ViewData["Title"] = "Add";

}


<main>
    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">

        <div class="card w-100">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:x-large">
                        Add New
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-secondary" w-100">Back</a>
                    </div>

                </div>

            </div>



            <div class="card-body">


                <form asp-action="Add" asp-controller="Event" method="post" enctype="multipart/form-data">


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventId" />

                    <div>

                        <div class="row">

                            <div class="col-6">

                                <label asp-for="EventName" class="col-form-label">Event Name</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EventName" placeholder="Enter Event Name">

                            </div>

                            <div class="col-6">

                                <label asp-for="EventType" class="col-form-label">Event Type</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EventType" placeholder="Enter Event Type">

                            </div>


                        </div>


                        <div class="row">

                            <div class="col-6">
                                <label class="control-label">City</label>
                                <select class="form-control" asp-for="CityId"
                                        asp-items="@(new SelectList(ViewBag.city,"CityId","CityName"))">
                                </select>

                            </div>

                            <div class="col-6">

                                <label class="control-label">Event Category</label>
                                <select class="form-control" asp-for="EventCategoryId"
                                        asp-items="@(new SelectList(ViewBag.category,"EventCategoryId","EcategoryName"))">
                                </select>
                            </div>

                        </div>



                        <div class="row">

                            <div class="col-6">

                                <label asp-for="EventLocation" class="col-form-label">Event Location</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EventLocation" placeholder="Enter Event Location">

                            </div>

                            <div class="col-6">

                                <label asp-for="MaxNumber" class="col-form-label">Max Number</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="MaxNumber" placeholder="Enter Maximum Number">

                            </div>

                        </div>


                        <div class="row" style="margin-top:2em">

                            <div class="col-3">

                                <label asp-for="EventDate" class="col-form-label">Event Date</label>

                                <input class="datefield"  data-val="true" data-val-required="Date is required" asp-for="EventDate"
                                       id="ReleaseDate" name="EventDate" type="date" />
                            </div>

                            <div class="col-3" style="margin-right:1em">

                                <label asp-for="EventStartTime" class="col-form-label">Event Start Time</label>

                                @*@Html.TextBoxFor(m => m.EventStartTime, "{0:hh\\:mm\\:tt}")*@

                                <input class="datefield" data-val="true" data-val-required="Date is required" asp-for="EventStartTime"
                                       type="time" />
                            </div>

                            <div class="col-3">

                                <label asp-for="EventEndTime" class="col-form-label">Event End Time</label>

                                @*@Html.TextBoxFor(m => m.EventEndTime, "{0:hh\\:mm\\:tt}")*@

                                <input class="datefield" data-val="true" data-val-required="Date is required" asp-for="EventEndTime"
                                       type="time" />

                            </div>
                        </div>

                        <div class="row">

                            <div class="col-12">

                                <label asp-for="EventImgPath" class="control-label">Event ImgPath</label>
                          
                                <input type="file" name="EventImgPath" class="form-control" id="exampleFormControlInput1" asp-for="EventImgPath">

                            </div>


                        </div>

                        <div class="row" style="margin-top:2em">

                            <div class="col-3">

                                <label class="control-label">Speakers</label>
                                <select class="form-control" asp-for="SpeakerName"
                                        asp-items="@(new SelectList(ViewBag.speaker,"SpeakerId","SpeakerName"))" , required="">
                                </select>

                            </div>


                            <div class="col-3">

                                <label asp-for="Edtitle" class="control-label">Title</label>
                                <input type="text" class="form-control" id="title" asp-for="Edtitle">

                            </div>

                            <div class="col-3">

                                <label asp-for="Edcontent" class="control-label">Content</label>
                                <input type="text" class="form-control" id="content" asp-for="Edcontent">

                            </div>

                            <div class="col-3">

                                <button type="button" id="add_speaker" class="btn btn-primary" style="margin-top:1.5em">Add New</button>

                            </div>

                        </div>

                        <div style="overflow:scroll">
                            <table class="table speakers imgw" >

                                <thead class="thead-light">

                                    <tr>

                                        <th scope="col">
                                            Speaker Name
                                        </th>

                                        <th></th>

                                        <th scope="col">
                                            Title
                                        </th>

                                        <th scope="col">
                                            Content
                                        </th>
                                        <th></th>

                                    </tr>

                                </thead>

                                <tbody>
                                </tbody>


                            </table>
                        </div>
                        

                        <div class="container-fluid d-flex justify-content-center">
                            <input type="submit" class="btn btn-primary btn-lg" value="Save" />
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</main>


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


<script>

     
    $('#add_speaker').click(function (){

        var rowCount = $('.count').length;
        

        var speakername = $("#SpeakerName option:selected").text();       
        var speakerid = $('#SpeakerName').val();
        var title = $('#title').val();
        var content = $('#content').val();

        
        var sp = '<tr class="count">' +
            '<td><input type="text" id="speakername' + rowCount + '" name="insertspeaker[' + rowCount + '].speakername" value=" ' + speakername.toString() + '" readonly /></td>' +
            '<td><input type="hidden" id="speakerid ' + rowCount + ' " name="insertspeaker[' + rowCount + '].speakerid" value=" ' + speakerid.toString() + '" readonly /></td>' +
            '<td><input type="text" id="speakertitle ' + rowCount + ' " name="insertspeaker[' + rowCount + '].speakertitle" value=" ' + title.toString() + '" readonly /></td>' +
            '<td><input type="text" id="speakercontent ' + rowCount + ' " name="insertspeaker[' + rowCount + '].speakercontent" value=" ' + content.toString() + '" readonly /></td>' +
            '<td><button type="button" id= ' + rowCount + ' class="deleteSpeaker btn btn-danger">Remove</button></td></tr>';

        @*'<td><input type="text" id="speakername ' + rowCount + ' " name="insertspeaker[' + rowCount + ' ].Speakername" value=" ' + speakername.toString() + '" readonly />' +
            '<td><input type="hidden" id="speakerid ' + rowCount + ' " name="insertspeaker[' + rowCount + ' ].Speakerid" value=" ' + speakerid.toString() + '" readonly />' +
            '<td><input type="text" id="speakertitle ' + rowCount + ' " name="insertspeaker[' + rowCount + ' ].Speakertitle" value=" ' + title.toString() + '" readonly />' +
            '<td><input type="text" id="speakercontent ' + rowCount + ' " name="insertspeaker[' + rowCount + ' ].SpeakerContent" value=" ' + content.toString() + '" readonly />';*@

        $(".speakers > tbody").append(sp);
        document.getElementById("SpeakerName").selectedIndex = 0;
        document.getElementById("title").value = "";
        document.getElementById("content").value = "";

    });

    $(document).on("click", ".deleteSpeaker", function ()
    {
       
        var sid = this.id;
        document.getElementById("speakername" + sid).value = null;
        $(this).closest("tr").hide();
    });


    </script>

















