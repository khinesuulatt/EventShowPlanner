

@model EventShow.Models.Eventinfo

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";

}


<main>
    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">

        <div class="card col-lg-9">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:x-large">
                        Delete
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-secondary" w-100">Cancel</a>
                    </div>

                </div>

            </div>



            <div class="card-body">


                <form asp-action="Delete" asp-controller="Event" method="post" enctype="multipart/form-data">


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventId" />
                    <input type="hidden" asp-for="EventDetailId"/>

                    <div>
                        <div class="mb-3 d-flex justify-content-center">

                            <label asp-for="EventName" class="col-sm-2 col-form-label">Event Name</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EventName">

                        </div>

                        <div class="mb-3 d-flex justify-content-center">

                            <label asp-for="EventLocation" class="col-sm-2 col-form-label">Event Location</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EventLocation" placeholder="Enter Event Location">

                        </div>



                       



                        <div class="container-fluid d-flex justify-content-center">
                            <input type="submit" class="btn btn-danger" value="Delete"/> 
                            

                        </div>




                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <script type="text/javascript">
                $(function () {
                    alert("@ViewBag.Message");
                });
                        </script>
                    }

                </form>
            </div>
        </div>
    </div>
</main>


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


<script>$(document).ready(function () {

        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy",
            changemonth: true,
            changeyear: true
        });
    $('#timepicker').timepicker({
        timeFormat: "hh:mm tt",
        changehour: true,
        changeminute: true,
        changeAbbreviated AM / PM: true
  


    });</script>











