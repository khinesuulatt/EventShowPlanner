@model List<EventShow.Models.Userfeedbacks>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}




<main>

    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">


        <div class="card w-100">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:xx-large">
                        User's Feedback
                    </div>

               
                </div>


            </div>

            <div class="card-body" style="overflow:auto">

                @{ int no = 1; }
                <table id="example" class="display" style="overflow:auto">
                    <thead>

                        <tr>
                            <th>No</th>

                   

                            <th scope="col">
                                User's Feedbacks
                            </th>

                           
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@no</td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.FName)
                                    @Html.HiddenFor(modelItem => item.FeedbackId)
                                </td>

                               
                            </tr>
                            { no = no + 1; }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>

@section Scripts{
    <script>$(document).ready(function () {
        $('#example').DataTable();
    });</script> }

