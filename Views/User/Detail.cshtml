

@model EventShow.Models.User



@{
    Layout = "_Layout";
    ViewData["Title"] = "Detail";

}


<main>
    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">

        <div class="card w-100">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:x-large">
                        Detail View
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-secondary" w-100">Back</a>
                    </div>

                </div>

            </div>



            <div class="card-body">


                <form asp-action="Detail" asp-controller="User" method="post" enctype="multipart/form-data">


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />

                    <div>

                        <div class="row">

                            <div class="col-4">

                                <label asp-for="UserName" class="col-form-label"> Name</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="UserName" disabled>

                            </div>


                            <div class="col-4">

                                <label asp-for="UserAddress" class="col-form-label">Address</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="UserAddress" disabled>

                            </div>

                            <div class="col-4">

                                <label asp-for="JobTitle" class="control-label">Job Title</label>
                                <input class="form-control" asp-for="JobTitle" disabled />

                            </div>


                        </div>

                        <div class="row">

                            <div class="col-4">

                                <label asp-for="EmailAddress" class="col-form-label"> Email </label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EmailAddress" disabled>

                            </div>


                            <div class="col-4">

                                <label asp-for="PhoneNumber" class="col-form-label">Phone</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="PhoneNumber" disabled>

                            </div>

                            <div class="col-4">

                                <label asp-for="Password" class="col-form-label">Password</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="Password" disabled>

                            </div>

                        </div>


                        <div class="row">

                            <div class="col-4">

                                <label asp-for="UserAge" class="col-form-label">Age</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="UserAge" disabled>

                            </div>

                            <div class="col-4">

                                <label asp-for="Gender" class="control-label">Gender</label>
                                <input class="form-control" asp-for="Gender" disabled />

                            </div>

                            <div class="col-4">
                                <label class="control-label">City</label>
                                <select class="form-control" asp-for="CityId"
                                        asp-items="@(new SelectList(ViewBag.city,"CityId","CityName"))" disabled>
                                </select>

                            </div>

                        </div>




                        <div class="row">

                            


                        </div>


                    </div>

                

                </form>
            </div>
        </div>
    </div>
</main>

















