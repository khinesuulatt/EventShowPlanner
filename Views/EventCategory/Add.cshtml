
@model EventShow.Models.EventCategory
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add";

}



<main>
    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">

        <div class="card col-lg-7">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:x-large">
                        Add New Event Category
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-secondary" w-100">Back</a>
                    </div>

                </div>

            </div>

            <div class="card-body">


                <form asp-action="Add" asp-controller="EventCategory" method="post">


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventCategoryId" />

                    <div>
                        <div class="mb-3 d-flex justify-content-center">

                            <label asp-for="EcategoryName" class="col-sm-2 col-form-label">Event Category Name</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="EcategoryName" placeholder="Enter Event Category Name">

                        </div>


                    

                        <div class="container-fluid d-flex justify-content-center">
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</main>


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {

            var msg = '@ViewData["result"]';

              if (msg == '1')
              {
                 alert("Category Name already exit.");
                 window.location.href = "@Url.Action("Add", "EventCategory")";
              }
    });
</script>




