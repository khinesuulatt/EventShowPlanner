@model List<EventShow.Models.EventCategory>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}



<main>

    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">


        <div class="card w-100">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:xx-large">
                        Event Category List
                    </div>

                    <a class="btn btn-secondary" style="color: white; background-color: #0b51b0; margin-bottom: 0.27em" href="@Url.Action("Add", "EventCategory", new { })">
                        Add New
                    </a>
                </div>


            </div>

            <div class="card-body" style="overflow:auto">

                @{ int no = 1; }
                <table id="example" class="display" style="overflow:auto">
                    <thead>

                        <tr>
                            <th>No</th>

                            <th scope="col">
                                Event Category Name
                            </th>

                            <th scope="col">
                                Edit
                            </th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@no</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EcategoryName)
                                    @Html.HiddenFor(modelItem => item.EventCategoryId)
                                </td>

                                <td>
                            

                                    <a class="btn btn-outline-success" href="@Url.Action("Edit", "EventCategory", new { id = @item.EventCategoryId})">
                                        <i class="fa fa-edit" aria-hidden="true"></i>

                                    </a>

                                

                                </td>
                            </tr>
                            { no = no + 1; }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>

@section Scripts{
    <script>$(document).ready(function () {
        $('#example').DataTable();
    });</script> }

