@model List<EventShow.Models.Speakerinfoindex>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}


<main>

    <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">


        <div class="card w-100">

            <div class="card-header">

                <div class="d-flex" style="justify-content:space-between">

                    <div style="font-size:xx-large">
                        Speaker List
                    </div>

                    <a class="btn btn-secondary" style="color: white; background-color: #0b51b0; margin-bottom: 0.27em" href="@Url.Action("AddNewSpeaker", "Speaker", new { })">
                        Add New 
                    </a>
                </div>


            </div>

            <div class="card-body" style="overflow:auto">

                @{ int no = 1; }
                <table id="example" class="display" style="overflow:auto">
                    <thead>

                        <tr>
                            <th>No</th>

                            <th scope="col">
                                Speaker Name
                            </th>

                            <th scope="col">
                                Age
                            </th>

                            <th scope="col">
                                Professional
                            </th>

                            @*<th scope="col">
                                Job
                            </th>*@

                            <th scope="col">
                                City
                            </th>

                            <th scope="col">
                                Action
                            </th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="table-active">
                                <td>@no</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpeakerName)
                                    @Html.HiddenFor(modelItem => item.SpeakerId)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Sage)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Professional)
                                </td>

                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Sjob)
                                </td>*@

                                <td>
                                    @Html.DisplayFor(modelItem => item.CityName)
                                </td>

                                <td>
                                    <a class="btn btn-outline-primary" href="@Url.Action("Detail", "Speaker", new { id = @item.SpeakerId})">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </a>

                                    <a class="btn btn-outline-success" href="@Url.Action("Edit", "Speaker", new { id = @item.SpeakerId})">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </a>

                                    <a class="btn btn-outline-danger" href="@Url.Action("Delete", "Speaker", new { id = @item.SpeakerId})">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                            { no = no + 1; }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>

@section Scripts{
    <script>$(document).ready(function () {
            $('#example').DataTable();
        });</script> }

