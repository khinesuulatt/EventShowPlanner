                            <li><i class="bx bx-chevron-right"></i>adfdsfsdf</li>
                            <li><i class="bx bx-chevron-right"></i> sdfdsfsdf</li>
                        </ul>
                    </div>*@

                    @*<div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4>Contact us</h4>

                        <form action="SendText" method="post">
                            <input type="text" name="FName" style="outline:none;"><input type="submit" value="Send Mail">
                        </form>
                    </div>*@

                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">


            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <script src="/test/vendor/aos/aos.js"></script>
    <script src="/test/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/test/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/test/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/test/vendor/php-email-form/validate.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="/test/js/main.js"></script>

</body>

</html>