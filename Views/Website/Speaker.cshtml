    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Speakerinfo</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="/test/img/favicon.png" rel="icon">
    <link href="/test/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=https://fonts.googleapis.com/css?family=Inconsolata:400,500,600,700|Raleway:400,400i,500,500i,600,600i,700,700i" rel="stylesheet">



    <!-- Vendor CSS Files -->
    <link href="/test/vendor/aos/aos.css" rel="stylesheet">
    <link href="/test/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/test/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/test/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="/test/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="/test/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="/test/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="/test/css/style.css" rel="stylesheet">


    <style>

        #header {
            background: #80b8a9;
            transition: all 0.5s;
            z-index: 997;
            height: 70px;
        }

            #header.header-scrolled {
                box-shadow: 0px 2px 15px rgba(0, 0, 0, 0.1);
            }

            #header .logo {
                font-size: 40px;
                margin: 0;
                padding: 0;
                line-height: 1;
                font-weight: 700;
                letter-spacing: 1px;
                text-transform: uppercase;
            }

                #header .logo a {
                    color: #fff;
                    text-shadow: 2px 2px #444444;
                }

                #header .logo img {
                    max-height: 40px;
                }

        .scrolled-offset {
            margin-top: 70px;
        }

        .img-fluid {
            max-width: 500px;
            height: auto;
        }
    </style>


</head>

<body>



    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="@Url.Action("Index", "Website", new { })">Event Planner</a></h1>

            <nav id="navbar" class="navbar">

                <ul>
                    <li><a class="nav-link scrollto" href="@Url.Action("Index", "Website", new { })">Home</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("About", "Website", new { })">About</a></li>

                    <li><a class="nav-link scrollto" href="@Url.Action("Register", "Website", new { })">Register</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("Login", "Website", new { })">Login</a></li>

                </ul>

                <i class="bi bi-list mobile-nav-toggle"></i>

            </nav>

        </div>
    </header>


    <section class="section">

        <div class="container">
            <div class="row mb-4 align-items-center">
                <div class="col-md-6" data-aos="fade-up">
                    <h2>@Html.DisplayFor(modelItem => modelItem.SpeakerName) </h2>
                </div>
            </div>
        </div>


        <div class="site-section pb-0">
            <div class="container">
                <div class="row align-items-stretch">
                    <div class="col-md-6" data-aos="fade-up">
                        <img src="@("/"+ Model.SpeakerImgPath)" alt="Image" class="img-fluid" style="max-height:600px">
                    </div>
                    

                    <div class="col-md-6 ml-auto" data-aos="fade-up" data-aos-delay="100" style="background-color: rgba(227, 227, 228, 0.5); border-radius:25px; font-size:x-large; justify-content: center; display: flex; color: gray;">
                        <div class="sticky-content" style="margin-top:3em;">
                            <h3 class="h3" style="font-size: xx-large; color:black;">@Html.DisplayFor(modelItem => modelItem.SpeakerName) </h3>
                            


                            <div class="sticky-content" style="margin-top:3em; margin-bottom:5em;">
                                <ul class="mb-5" style="color:black">

                                    <li>Job: @Html.DisplayFor(modelItem => modelItem.Sjob)</li>
                                    <li>Professional: @Html.DisplayFor(modelItem => modelItem.Professional)</li>

                                    <li>Age: @Html.DisplayFor(modelItem => modelItem.Sage)</li>
                                    <li>Address: @Html.DisplayFor(modelItem => modelItem.Saddress)</li>

                                </ul>

                                <h4 style="color:black">
                                    Biography
                                </h4>

                                <p>

                                    @Html.DisplayFor(modelItem => modelItem.Description)
                                </p>


                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>


    </section>



    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-6 col-md-6 footer-contact">
                        <h3>Office address</h3>
                        <p>
                            A108 Adam Street <br>
                            New York, NY 535022<br>
                            United States <br><br>
                            <strong>Phone:</strong> +95 9 12345678<br>
                            <strong>Email:</strong> eventplanner122022@gmail.com<br>
                        </p>
                    </div>

                    <div class="col-lg-6 col-md-6 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Index", "Website", new { })">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("About", "Website", new { })">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Register", "Website", new { })">Register</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Login", "Website", new { })">Login</a></li>

                        </ul>
                    </div>

