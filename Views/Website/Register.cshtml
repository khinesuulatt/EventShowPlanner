@model EventShow.Models.RegisterUser

@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Registration Form</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: rgb(182, 214, 207)">
    <main>

        <div class="container-fluid d-flex justify-content-center" style="padding-top:3em">

            <div class="card shadow p-3 mb-5  rounded" style="width: 800px; margin-top: 5em; margin-bottom: 5em; border-radius: 25px; background-color: #80b8a9; ">

                <div class="card-header">

                    <div class="d-flex" style="justify-content:space-between">

                        <div style="font-size:x-large">
                            Register Here
                        </div>

                        <div>
                            <a asp-action="Index" class="btn w-100" style="background-color: rgb(59, 142, 115); color:white;">Back</a>
                        </div>

                    </div>

                </div>



                <div class="card-body">



                    <form asp-action="Register" asp-controller="Website" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserId" />

                        <div>

                            <div class="row">

                                <div class="col-6">

                                    <label asp-for="UserName" class="col-form-label">Name</label>
                                    <input type="text" style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="UserName" placeholder="Enter Full Name" required="">

                                </div>

                                <div class="col-6">

                                    <label asp-for="UserAge" class="col-form-label">Age</label>
                                    <input type="text" style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="UserAge" placeholder="Enter Age" required="">

                                </div>



                            </div>

                            <div class="row">

                                <div class="col-6">

                                    <label asp-for="EmailAddress" class="col-form-label">Email</label>
                                    <input type="email" style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="EmailAddress" placeholder="Enter Email Address" required="">

                                </div>

                                <div class="col-6">

                                    <label asp-for="PhoneNumber" class="col-form-label">Phone</label>
                                    <input type="number" style="background-color: #80b8a9"  class="form-control" id="exampleFormControlInput1" asp-for="PhoneNumber" placeholder="Enter Phone Number" required="">

                                </div>

                            </div>

                            <div class="row">

                                <div class="col-6" style="margin-top:1em;">
                                    <label class="control-label">City</label>
                                    <select class="form-control" style="background-color: #80b8a9" asp-for="CityId"
                                            asp-items="@(new SelectList(ViewBag.city,"CityId","CityName"))" required="">
                                    </select>



                                </div>



                                <div class="col-6">

                                    <label asp-for="UserAddress" class="col-form-label">Address</label>
                                    <input type="text"  style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="UserAddress" placeholder="Enter Address" required="">

                                </div>

                            </div>

                            <div class="row">

                                <div class="col-6">

                                    <label asp-for="JobTitle" class="col-form-label">Job Title</label>

                                    <input type="text"  style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="JobTitle" placeholder="Enter Jobtitle" required="">
                                </div>



                                <div class="row col-6">

                                    <div class="col-6">
                                        <label asp-for="Password" class="col-form-label">Password</label>
                                        <input type="password" style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="Password" placeholder="Enter Password" required="">
                                    </div>

                                    <div class="col-6">
                                        <label asp-for="ConfirmPassword" class="col-form-label">Confirm Password</label>
                                        <input type="password" style="background-color: #80b8a9" class="form-control" id="exampleFormControlInput1" asp-for="ConfirmPassword" placeholder="Confirm Password" required="" />
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-12" style="margin-top:1.5em">

                                    <label asp-for="Gender" class="col-form-label" style="margin-right:2em">Gender</label>
                                    <input type="radio" asp-for="Gender" value=Male required="" />Male
                                    <input type="radio" asp-for="Gender" value=Female style="margin-left:2em" required="" />Female<br />
                                </div>
                            </div>


                            <div style="margin-top:2em">
                                <div class="container-fluid d-flex justify-content-center">
                                    <input type="submit" class="btn btn-lg" value="Register" style="color: white; background-color: #4a8777" />
                                </div>
                            </div>


                        </div>

                    </form>
                </div>
            </div>
        </div>

    </main>
</body>




</html>


