@model List<EventShow.Models.EventA>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Event Show Planner Website</title>
    <meta content="" name="description">
    <meta content="" name="keywords">


    <link href="/website/img/favicon.png" rel="icon">
    <link href="/website/img/apple-touch-icon.png" rel="apple-touch-icon">


    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    <link href="/website/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="/website/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/website/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/website/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="/website/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="/website/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">


    <link href="/website/css/style.css" rel="stylesheet">


</head>

<body>


    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="index.html">Event Planner</a></h1>

            <nav id="navbar" class="navbar">

                <ul>
                    <li><a class="nav-link scrollto active" href="@Url.Action("Index", "Website", new { })">Home</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("About", "Website", new { })">About</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("Register", "Website", new { })">Register</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("Login", "Website", new { })">Login</a></li>

                </ul>

                

                <i class="bi bi-list mobile-nav-toggle"></i>

            </nav>

        </div>
    </header>




    <section id="hero" style="height: 100vh">
        <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

            <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

            <div class="carousel-inner" role="listbox">


                <div class="carousel-item active" style="background-image:url(/website/img/slide/b1.jpg)">
                    <div class="carousel-container">

                    </div>
                </div>


                <div class="carousel-item" style="background-image: url(/website/img/slide/s1.jpg) ">
                    <div class="carousel-container">

                    </div>
                </div>

                <div class="carousel-item" style="background-image: url(/website/img/slide/b2.jpg) ">
                    <div class="carousel-container">

                    </div>
                </div>

            </div>

            <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>

        </div>
    </section>

    <main id="main">

        <section id="clients" class="clients" style="min-height: 100vh">

            <div class="container">

                <div class="section-title" style="margin-top: 2em">
                    <h2>Upcoming Events</h2>
                    <h3>Join Now</h3>
                </div>

                <div class="clients-slider swiper">
                    <div class="swiper-wrapper align-items-center">

                        @foreach (var abc in Model)

                        {

                            if (DateTime.ParseExact(abc.event_date, "MM/dd/yyyy", null) > DateTime.Now)
                            {
                                <div class="swiper-slide" style="margin-left: 10rem;">

                                    <div class="card cardshadow" style="width: 20rem; height:30rem; margin-left: 10rem; border:none; border-radius:25px;">


                                        <div class="card-body d-flex justify-content-center flex-column align-items-center" background-color="primary">
                                            <h5 class="card-title" style="color: black; text-align:center;">@Html.DisplayFor(modelItem => abc.EventName) </h5>
                                            <a href="@Url.Action("Kumo", "Website", new { id = abc.EventId})" class="item-wrap fancybox d-flex justify-content-center">
                                                <img class="img-fluid card-img-top" src="@("/"+ abc.EventImgPath)" style="max-height:300px" alt="...">
                                            </a>
                                            <p class="card-text">Location: @Html.DisplayFor(modelItem => abc.EventLocation)</p>
                                            <p class="card-text">Date: @Html.DisplayFor(modelItem => abc.event_date)</p>
                                            <p class="card-text">Time: @Html.DisplayFor(modelItem => abc.start_time) to @Html.DisplayFor(modelItem => abc.end_time)</p>

                                        </div>
                                    </div>

                                </div>
                            }

                        }

                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>
        </section>



        <section id="services" class="services" style="margin-top:5em">
            <div class="container">

                <div class="section-title">
                    <h2>Previous Events</h2>

                </div>

                <div class="row">

                    @foreach (var abc in Model)

                    {
                        if (DateTime.ParseExact(abc.event_date, "MM/dd/yyyy", null) < DateTime.Now)

                        {
                            <div class="col-4">
                                <div class="card cardshadow" style="width: 20rem; height: 35rem; margin-left: 5.5em; margin-bottom: 3rem; border: none; border-radius: 25px;">

                                    <div class="card-body d-flex justify-content-center flex-column align-items-center" background-color="primary">
                                        <h5 class="card-title" style="color: black; text-align:center;">@Html.DisplayFor(modelItem => abc.EventName) </h5>
                                        <a href="@Url.Action("Kumo", "Website", new {id = abc.EventId})" class="item-wrap fancybox">
                                            <img class="img-fluid card-img-top" src="@("/"+ abc.EventImgPath)" style="max-height:300px" alt="...">
                                        </a>
                                        <p class="card-text">Location: @Html.DisplayFor(modelItem => abc.EventLocation)</p>
                                        <p class="card-text">Date: @Html.DisplayFor(modelItem => abc.event_date)</p>
                                        <p class="card-text">Time: @Html.DisplayFor(modelItem => abc.start_time) to @Html.DisplayFor(modelItem => abc.end_time)</p>

                                    </div>
                                </div>
                            </div>
                        }


                    }

                </div>

            </div>

        </section>


        <section id="portfolio" class="portfolio">
            <div class="container">

                <div class="section-title">
                    <h2>Event Categories</h2>

                </div>

                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter=".filter-1">Seminars</li>
                            <li data-filter=".filter-2">Conferences</li>
                            <li data-filter=".filter-3">Trade Event Show</li>
                            <li data-filter=".filter-4">Work Show</li>
                            <li data-filter=".filter-5">Gathering</li>

                            <li data-filter=".filter-7">Knowledge Sharing</li>
                        </ul>
                    </div>
                </div>

                <div class="row portfolio-container">

                    @foreach (var abc in Model)
                    {
                        <div class="col-lg-4  portfolio-item filter-@abc.EventCategoryId">

                            <div class="card cardshadow" style="width: 20rem; margin-left: 5.5em; border: none; border-radius: 25px;">

                                <div class="card-body d-flex justify-content-center flex-column align-items-center" background-color="primary">
                                    <h5 class="card-title" style="color: black; text-align:center;">@Html.DisplayFor(modelItem => abc.EventName) </h5>
                                    <a href="@Url.Action("Kumo", "Website", new {id = abc.EventId})" class="item-wrap fancybox">
                                        <img class="img-fluid card-img-top" src="@("/"+ abc.EventImgPath)" style="max-height:300px" alt="...">
                                    </a>
                                    <p class="card-text">Location: @Html.DisplayFor(modelItem => abc.EventLocation)</p>
                                    <p class="card-text">Date: @Html.DisplayFor(modelItem => abc.event_date)</p>
                                    <p class="card-text">Time: @Html.DisplayFor(modelItem => abc.start_time) to @Html.DisplayFor(modelItem => abc.end_time)</p>

                                </div>
                            </div>

                        </div>
                    }

                </div>

            </div>
        </section>


    </main>

    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-6 footer-contact">
                        <h3>Office address</h3>
                        <p>
                            A108 Adam Street <br>
                            New York, NY 535022<br>
                            United States <br><br>
                            <strong>Phone:</strong> +95 9 12345678<br>
                            <strong>Email:</strong> eventplanner122022@gmail.com<br>
                        </p>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Index", "Website", new { })">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("About", "Website", new { })">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Register", "Website", new { })">Register</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Login", "Website", new { })">Login</a></li>

                        </ul>
                    </div>


                    <div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4>Contact us</h4>

                        <form action="SendText" method="post">
                            <input type="text" name="FName" style="outline:none;"><input type="submit" value="Send Mail">
                        </form>
                    </div>


                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">


            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


    <script src="/website/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/website/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/website/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/website/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/website/vendor/php-email-form/validate.js"></script>


    <script src="/website/js/main.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    <script type="text/javascript">

        $("form").submit(function (e)
        {
            e.preventDefault();
            var $form = $(this);
            var data = $form.serialize();
            SaveFeedback(data);
        });

        function SaveFeedback(data) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("SendText", "Website")',
                data: data,
                success: function (response)
                {
                    {
                        if (response.success)
                        {
                            window.location.href = '@Url.Action("Index", "Website", new {})';
                        }

                        else
                        {
                            alert("Login Failed!");

                        }

                    }

                }
            });
        }

    </script>

</body>



</html>


