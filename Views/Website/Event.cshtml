@model EventShow.Models.EventOne
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Kumo Knowledge Sharing</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="/test/img/favicon.png" rel="icon">
    <link href="/test/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=https://fonts.googleapis.com/css?family=Inconsolata:400,500,600,700|Raleway:400,400i,500,500i,600,600i,700,700i" rel="stylesheet">



    <!-- Vendor CSS Files -->
    <link href="/test/vendor/aos/aos.css" rel="stylesheet">
    <link href="/test/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/test/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/test/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="/test/css/style.css" rel="stylesheet">


    <style>

        #header {
            background: #fff;
            transition: all 0.5s;
            z-index: 997;
            height: 70px;
        }

            #header.header-scrolled {
                box-shadow: 0px 2px 15px rgba(0, 0, 0, 0.1);
            }

            #header .logo {
                font-size: 40px;
                margin: 0;
                padding: 0;
                line-height: 1;
                font-weight: 700;
                letter-spacing: 1px;
                text-transform: uppercase;
            }

                #header .logo a {
                    color: #80b8a9;
                    text-shadow: 2px 2px #444444;
                }

                #header .logo img {
                    max-height: 40px;
                }

        .scrolled-offset {
            margin-top: 70px;
        }

        .img-fluid {
            max-width: 500px;
            height: auto;
        }
    </style>
</head>

<body>



    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="@Url.Action("Index", "Website", new { })">Event Planner</a></h1>

            <nav id="navbar" class="navbar">

            </nav>

        </div>
    </header>


    <section class="section">

        <div class="container">
            <div class="row mb-4 align-items-center">
                <div class="col-md-6" data-aos="fade-up">
                    <h2>@Html.DisplayFor(modelItem => modelItem.EventName) </h2>
                </div>
            </div>
        </div>
        @foreach (var speaker in Model.speakerlist)
        {
            <div class="site-section pb-0">
                <div class="container">
                    <div class="row align-items-stretch">
                        <div class="col-md-8" data-aos="fade-up">
                            <img src="@("/"+ speaker.SpeakerImgPath)" alt="Image" class="img-fluid">
                        </div>
                        <div class="col-md-3 ml-auto" data-aos="fade-up" data-aos-delay="100">
                            <div class="sticky-content">
                                <h3 class="h3">@Html.DisplayFor(modelItem => modelItem.EventName) </h3>
                                <p class="mb-4"><span class="text-muted">@Html.DisplayFor(modelItem => speaker.speakername)</span></p>
                                <ul class="list-unstyled list-line mb-5">

                                    <li>Description: @Html.DisplayFor(modelItem => speaker.speakerdescription)</li>
                                    <li>Job: @Html.DisplayFor(modelItem => speaker.speakerjob)</li>
                                    <li>Age: @Html.DisplayFor(modelItem => speaker.speakerage)</li>
                                    <li>Professional: @Html.DisplayFor(modelItem => speaker.speakerprofessional)</li>
                                    <li>Address: @Html.DisplayFor(modelItem => speaker.speakeraddress)</li>

                                


                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </section>

    



    <script src="/test/vendor/aos/aos.js"></script>
    <script src="/test/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/test/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/test/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/test/vendor/php-email-form/validate.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="/test/js/main.js"></script>

</body>

</html>