@model EventShow.Models.Dashboardcounts
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}


    <link href="/db/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/db/css/nucleo-svg.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->

    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="/db/css/nucleo-svg.css" rel="stylesheet" />

    <!-- CSS Files -->

    <link id="pagestyle" href="/db/css/argon-dashboard.css?v=2.0.4" rel="stylesheet" />
    @*<link id="pagestyle" href="/" rel="stylesheet" />*@




<main>

    <div class="container-fluid d-flex justify-content-center " style="padding-top:3em">

        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Member Count</p>
                                        <h5 class="font-weight-bolder">
                                            @Model.usercount
                                        </h5>

                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                                        <i class="ni ni-circle-08 text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Speaker Count</p>
                                        <h5 class="font-weight-bolder">
                                            @Model.speakercount
                                        </h5>

                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                                        <i class="ni ni-single-02 text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Previous Events Counts</p>
                                        <h5 class="font-weight-bolder">
                                            @Model.preeventcount
                                        </h5>

                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                                        <i class="ni ni-calendar-grid-58 text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">This month event count</p>
                                        <h5 class="font-weight-bolder">
                                            @Model.eventcount
                                        </h5>

                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                                        <i class="ni ni-book-bookmark text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4" style="margin-top:5em;">

                <div class="col-lg-7 mb-lg-0 mb-4">
                    <div class="card z-index-2 h-100">

                        <div class="card-header pb-0 pt-3 bg-transparent">
                            <h6 class="text-capitalize">Events during this month</h6>

                        </div>
                        <div class="card-body p-3" style="overflow:scroll">

                            @{ int no = 1; }
                            <table class="table table-primary table-striped display" style="overflow:auto">

                                <thead>

                                    <tr>
                                        <th>No</th>

                                        <th scope="col">
                                            Name
                                        </th>

                                        <th scope="col">
                                            Date
                                        </th>

                                        <th scope="col">
                                            Detail
                                        </th>

                                    </tr>

                                </thead>

                                <tbody style="text-align:center">

                                    @foreach (var item in Model.eventtables)
                                    {
                                        <tr>

                                            <td>@no</td>
                                            <td>
                                                @item.EventName

                                            </td>

                                            <td>
                                                @item.Event_Date

                                            </td>

                                            <td>
                                                <a class="btn btn-primary" href="@Url.Action("Detail", "Event", new { id = @item.EventId})">
                                                    View

                                                </a>

                                            </td>


                                        </tr>
                                        { no = no + 1; }
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>


                <div class="col-lg-5 mb-lg-0 mb-4">
                    <div class="card z-index-2 h-100">

                        <div class="card-header pb-0 pt-3 bg-transparent">
                            <h6 class="text-capitalize">Transactions of this day</h6>

                        </div>
                        <div class="card-body" style="overflow:scroll">

                            @{ int number = 1; }
                            <table class="table table-primary table-striped display" style="overflow:auto">

                                <thead>

                                    <tr>
                                        <th>No</th>

                                        <th scope="col">
                                            Member Name
                                        </th>

                                        <th scope="col">
                                            Date
                                        </th>



                                    </tr>

                                </thead>

                                <tbody style="text-align:center">

                                    @foreach (var item in Model.trantables)
                                    {
                                        <tr>

                                            <td>@number</td>
                                            <td>
                                                @item.User_Name

                                            </td>

                                            <td>
                                                @item.Transaction_Date

                                            </td>




                                        </tr>
                                        { number = number + 1; }
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>

                @*other table*@
                @*<div class="col-lg-6">
                        <div class="card card-carousel overflow-hidden h-100 p-0">

                            <div id="chartContainer" style="height: 370px; width: 100%;">
                                <canvas id="bar-chart"></canvas>

                            </div>


                        </div>
                    </div>*@
            </div>

        </div>

    </div>

</main>

<script src="./db/js/core/popper.min.js"></script>
<script src="./db/js/core/bootstrap.min.js"></script>
<script src="./db/js/plugins/perfect-scrollbar.min.js"></script>
<script src="./db/js/plugins/smooth-scrollbar.min.js"></script>
<script src="./db/js/plugins/chartjs.min.js"></script>



